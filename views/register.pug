extends layout 
block content
    .row.mt-5
        .col-md-6.m-auto.text-center
            .card
                .card-body
                    img.mb-4(src="/assests/logo.png", alt="", width="80%") 
                    include partials/messages.pug
                    form(action='/users/register' method='POST')
                        .d-grid.gap-2.mx-auto
                            .form-floating
                                input#username.form-control(
                                    type='text' 
                                    name='username' 
                                    placeholder='Enter Username' 
                                    value = typeof(body.username) && body.username
                                )
                                label(for='username') Username
                            .form-floating
                                input#first_name.form-control(
                                    type='name' 
                                    name='first_name' 
                                    placeholder='Enter First Name' 
                                    value = typeof(body.first_name) && body.first_name
                                )
                                label(for='first_name') First Name
                            .form-floating
                                input#last_name.form-control(
                                    type='name' 
                                    name='last_name' 
                                    placeholder='Enter Last Name' 
                                    value = typeof(body.last_name) && body.last_name
                                )
                                label(for='last_name') Last Name
                            .form-floating
                                input#driving_license_no.form-control(
                                    type='text' 
                                    name='driving_license_no' 
                                    placeholder='Enter Driving License Number' 
                                    value = typeof(body.driving_license_no) && body.driving_license_no
                                )
                                label(for='driving_license_no') Driving License Number
                            .form-floating
                                input#email.form-control(
                                    type='email' 
                                    name='email' 
                                    placeholder='Enter Email' 
                                    value = typeof(body.email) && body.email
                                )
                                label(for='email') Email
                            .form-floating
                                input#password.form-control(
                                    type='password' 
                                    name='password' 
                                    placeholder='Create Password' 
                                    value = typeof(body.password) && body.password 
                                )
                                label(for='password') Password
                            .form-floating
                                input#password2.form-control(
                                    type='password' 
                                    name='password2' 
                                    placeholder='Confirm Password' 
                                    value=typeof(body.password2) && body.password2 
                                )
                                label(for='password2') Confirm Password
                            button.btn.btn-primary.btn-block(type='submit') Register
                    p.mt-3 Have An Account? 
                        a(href='/users/login') Login